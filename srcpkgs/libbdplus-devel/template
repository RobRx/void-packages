# Template file for 'libbdplus'
pkgname=libbdplus
version=0.2.0
revision=1
build_style=gnu-configure
configure_args="--disable-static"
makedepends="libgcrypt-devel"
short_desc="BD+ support library for Blu-ray playback"
maintainer="Robin Wiesen <robrx@posteo.de>"
license="LGPL-2.1-or-later"
homepage="https://www.videolan.org/developers/libbdplus.html"
distfiles="${VIDEOLAN_SITE}/libbdplus/${version}/libbdplus-${version}.tar.bz2"
checksum=b93eea3eaef33d6e9155d2c34b068c505493aa5a4936e63274f4342ab0f40a58

libbdplus-devel_package() {
	depends="${sourcepkg}-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
